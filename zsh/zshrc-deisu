export LC_ALL=$LANG
export EDITOR=vim
DEFAULT_USER="DeiSu"

#----------------------------
# OS X Show/Hide Hidden Files
#----------------------------
alias showHidden="defaults write com.apple.finder AppleShowAllFiles TRUE; killall Finder"
alias hideHidden="defaults write com.apple.finder AppleShowAllFiles FALSE; killall Finder"

#-----------------
# Logins
#-----------------
alias ucsc="ssh hesu@unix.ic.ucsc.edu"
alias brucedsu="ssh deisume@brucedsu.com"

#-----------------
# One-c Commands
#-----------------
alias c='clear'
alias p='pwd'
alias e='exit'
alias s="echo $?"
alias m='more'
alias h='history'
alias j='jobs -l'
alias v='vi'
alias f='fg'
alias t='tmux'

#-----------------
# Commands
#-----------------
# python3
alias p3="python3"

# caffeinate
alias cf="caffeinate -u -t"

# ls
alias la='ls -la'

# cd
alias cd..='cd ..'
alias ..='cd ..'

# safty nets
# alias rm='rm -i'
alias cp='cp -i'
alias in='ln -i'

# java
alias j='java'
jc() { javac "$@".java; }

# vim
alias vi="vim"
alias vimrc="sudo vi /usr/share/vim/vimrc"
alias vimrc="vi ~/.vimrc"
alias svi="sudo vi"
alias edit='vim'
vij() { vi "$@".java; }
vic() { vi "$@".c; }

# tune sudo and su
alias root='sudo -i'
alias su='sudo -i'

# reboot / halt / poweroff
alias roboot='sudo /sbin/reboot'
alias poweroff='sudo /sbin/poweroff'
alias halt='sudo /sbin/halt'
alias shutdown='sudo /sbin/shutdown'

# source
alias so="source"

#-----------------
# Git
#-----------------
alias g="git"
alias gs="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias ga="git add"
alias gb="git branch"
alias gbd="git branch -d"

# git checkout
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcom="git checkout master"

# git commit
alias gc="git commit"
alias gcam="git commit -a -m"
alias gcm="git commit -m"

# git log
alias gl="git log"
alias glo="git log --pretty=oneline"
alias glg="git log --graph"

alias gi="git init"
alias gm="git merge"
alias gmv="git mv"
alias gpull="git pull"
alias gpush="git push"
alias grm="git rm"
alias gr="git reflog"
alias gsh="git stash"
alias gshl="git stash list"
alias gsha="git stash apply"
alias gshp="git stash pop"
alias gt="git tag"
alias gtd="git tag -d"

# Terminal.app reserves ctrl-s for old-fashioned XON/XOFF flow control.
# Free up ctrl-s and control-q for use with vim
stty -ixon -ixoff

# 256 color tmux
alias tmux="TERM=screen-256color-bce tmux"
alias mb="musicbox"

#-----------------
# fzf
#-----------------
# solarized color theme
export FZF_DEFAULT_OPTS='
    --bind ctrl-f:page-down,ctrl-b:page-up
    --color fg:240,bg:-1,hl:136,fg+:61,bg+:0,hl+:166
    --color info:37,prompt:33,spinner:166,pointer:124,marker:125
'
